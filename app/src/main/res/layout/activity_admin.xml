<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/yellow"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminActivity">


    <TextView
        android:id="@+id/tvRestaurantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/dunkin"
        android:text="AdministraciÃ³n"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <SearchView
        android:id="@+id/buscador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_search"
        android:backgroundTint="@color/white"
        android:layout_margin="10dp"
        android:focusable="false"
        android:iconifiedByDefault="false"
        android:closeIcon="@drawable/close"
        android:queryHint="Buscar..."
        android:clipToOutline="false"
        app:layout_constraintTop_toBottomOf="@id/tvRestaurantes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rvRestaurantes"
         />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRestaurantes"

        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/buscador"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

<ImageButton
    android:id="@+id/btnCerrarSesion"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@null"
    android:src="@drawable/exit"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>