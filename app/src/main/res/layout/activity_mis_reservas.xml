<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".MisReservasActivity">

    <TextView
        android:id="@+id/tvMisReservas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Reservas"
        android:textSize="24sp"
        android:fontFamily="@font/dunkin"
        android:textColor="@color/black"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/rvReservas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReservas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMisReservas"/>
</androidx.constraintlayout.widget.ConstraintLayout>