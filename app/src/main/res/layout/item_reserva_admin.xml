<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvTituloUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/rocko"
            android:text="Usuario:"
            android:textColor="@color/black"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tvTitUsuarioCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:fontFamily="@font/rocko"
            android:text="Correo:"
            android:textColor="@color/black"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloUsuario" />
        <TextView
            android:id="@+id/tvTitResponsable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:fontFamily="@font/rocko"
            android:text="Responsable de la reserva:"
            android:textColor="@color/black"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitUsuarioCorreo" />
        <TextView
            android:id="@+id/tvCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/rocko"
            android:text="hola@gmail.com"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.037"
            app:layout_constraintStart_toEndOf="@+id/tvTitUsuarioCorreo"
            app:layout_constraintTop_toTopOf="@id/tvTitUsuarioCorreo" />

        <TextView
            android:id="@+id/tvTitReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="14dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/rocko"
            android:text="Reserva:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvTitResponsable"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvResponsable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/rocko"
            android:text="Carmen"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toEndOf="@+id/tvTitResponsable"
            app:layout_constraintTop_toTopOf="@+id/tvTitResponsable" />

        <TextView
            android:id="@+id/tvTituloFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/rocko"
            android:text="Día:"
            android:textColor="@color/black"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitReserva" />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/rocko"
            android:text="14/3/2024"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.018"
            app:layout_constraintStart_toEndOf="@+id/tvTituloFecha"
            app:layout_constraintTop_toTopOf="@+id/tvTituloFecha" />

        <TextView
            android:id="@+id/tvTituloHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/rocko"
            android:text="Hora:"
            android:textColor="@color/black"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTituloFecha"/>

        <TextView
            android:id="@+id/tvHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/rocko"
            android:text="14:30"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toEndOf="@+id/tvTituloHora"
            app:layout_constraintTop_toTopOf="@id/tvTituloHora" />

        <TextView
            android:id="@+id/tvTituloPersonas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="72dp"
            android:fontFamily="@font/rocko"
            android:text="Personas:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloHora" />
        <TextView
            android:id="@+id/tvPersonas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/rocko"
            android:text="1"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toEndOf="@+id/tvTituloPersonas"
            app:layout_constraintTop_toTopOf="@id/tvTituloPersonas" />
        <TextView
            android:id="@+id/tvTituloObservaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="72dp"
            android:fontFamily="@font/rocko"
            android:text="Observaciones:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloPersonas" />

        <TextView
            android:id="@+id/tvObservaciones"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/rocko"
            android:text="Soy alérgica a los frutos secosfffffffffffffffffffffffffff"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tvTituloObservaciones"
            app:layout_constraintTop_toTopOf="@id/tvTituloObservaciones" />
        <ImageButton
            android:id="@+id/btnBorrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/basura" />

        <ImageButton
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="28dp"

            android:background="@null"
            app:layout_constraintEnd_toStartOf="@+id/btnBorrar"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/editar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>